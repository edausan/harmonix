{
  "name": "harmonix",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "bridge": "node server/ws-bridge.js",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite build --watch\" \"electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.0.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^0.20.0"
  },
  "build": {
    "appId": "com.yourdomain.harmonix",
    "productName": "Harmonix",
    "icon": "electron/icon.png",
    "files": [
      "dist/**",
      "electron/**",
      "electron/icon.*",
      "server/**",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "electron/icon.icns"
    }
  }
}
